lude <iostream>
#include <string>
using namespace std;

int main(int argc, char *argv[]) {
  // varaibles to store command-line options
  bool verboose = false;
  int count = 0;
  string inputFile;

  // Loop through command-line arguments
  for (int i = 1; i < argc; ++i) {
    // Check for the different options
    if (arg == "-v" || arg == "--verbose") {
      verbose = true;
    } else if (arg == "-c" || arg == "--count") {
      // check that i isn't the last argument
      if (i + 1 < argc) {
	// Convert the next argument to an integer
	count = stoi(argv[++i]);
      } else {
	cerr << "Error: -c/--count requires an argument." << endl;
	return -1; // Exit with an error code
      }
    } else if (arg == "-i" || arg == "--input") {
      if (i + 1 < argc) {
	inputFile = argv[++i];
      } else {
	cerr << "Error: -i/--input requires an argument." << endl;
	return -1; // Exit with an error code
      }
    } else {
      // Handle unknown options or arguments
      cerr << "Unknown option or argument: " << endl;
      return -1; // Exit with an error code
    }
  }

  // Display the parsed options
  cout << "Verbosre: " << (verbose ? "true" : "fasle");
  cout << "Count: " << cout << endl;
  cout << "Input File: " << inputFile << endl;
  return 0;
}
