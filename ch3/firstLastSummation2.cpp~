#include <iostream>
#include <vector>

int main() {
    std::vector<int> numbers;
    int input;

    std::cout << "Enter a set of integers (enter a non-integer to finish input):" << std::endl;

    while (std::cin >> input) {
        numbers.push_back(input);
    }

    if (numbers.size() < 2) {
        std::cout << "At least two integers are required for adjacent sum calculations." << std::endl;
        return 1;
    }

    std::cout << "Sum of elements (first and last, second and second-to-last, and so on):" << std::endl;
    for (size_t i = 0, j = numbers.size() - 1; i < j; ++i, --j) {
        int sum = numbers[i] + numbers[j];
        std::cout << sum << " ";
    }

    // If there is an odd number of elements, print the middle element as is
    if (numbers.size() % 2 == 1) {
        std::cout << numbers[numbers.size() / 2] << " ";
    }

    std::cout << std::endl;

    return 0;
}
