#include <iostream>
#include <vector>

int main() {
    std::vector<int> numbers;
    int input;

    std::cout << "Enter a set of integers (enter a non-integer to finish input):" << std::endl;

    while (std::cin >> input) {
        numbers.push_back(input);
    }

    if (numbers.size() < 2) {
        std::cout << "At least two integers are required for adjacent sum calculations." << std::endl;
        return 1;
    }

    std::cout << "Sum of adjacent elements:" << std::endl;
    for (size_t i = 0; i < numbers.size() - 1; ++i) {
        int sum = numbers[i] + numbers[i + 1];
        std::cout << sum << " ";
    }
    std::cout << std::endl;

    return 0;
}
